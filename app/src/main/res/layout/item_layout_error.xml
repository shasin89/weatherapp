<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tool="http://schemas.android.com/tools"
        android:gravity="center_horizontal"
        android:background="@color/error_bg_color"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_centerInParent="true"
                  android:orientation="vertical" android:layout_centerVertical="true"
                  android:layout_alignParentStart="true" android:layout_marginLeft="0dp"
                  android:layout_marginStart="0dp" android:layout_alignParentLeft="true">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="54sp"
                android:fontFamily="@font/roboto_thin_font"
                android:textColor="@color/white"
                android:text="@string/something_went_wrong"
                android:lineSpacingExtra="1.4sp"
                android:layout_marginRight="44dp"
                android:layout_marginLeft="44dp"
                android:layout_marginBottom="44dp"
        />

        <Button
                android:id="@+id/btnRety"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:text="@string/btn_retry"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium_font"
                android:textAllCaps="false"
                android:background="@color/button_bg_color"
                android:elevation="4dp"
        />

    </LinearLayout>


</RelativeLayout>